<!DOCTYPE html>
<html>
    <head>
        <title>Fink Ployd | Store</title>
        <meta name="description" content="This is the description">
        <link rel="stylesheet" href="css/styles.css" />
        <script src="scripts/store.js" defer></script>
    </head>
    <body>
        <header class="main-header">
            <nav class="main-nav nav">
                <ul>
                    <li><a href="index.html">HOME</a></li>
                    <li><a href="store">STORE</a></li>
                    <li><a href="about.html">ABOUT</a></li>
                </ul>
            </nav>
            <h1 class="band-name band-name-large">Fink Ployd</h1>
        </header>
        <section class="container content-section">
            <h2 class="section-header">MUSIC</h2>
            <div class="shop-items">
               <% for(let i = 0; i < albums.length; i++) { %>
               <div class="shop-item">
                  <span class="shop-item-title"><%=albums[i].item_name %></span>
                  <img class="shop-item-image" src="<%=albums[i].item_image%>">
                  <div class="shop-item-details">
                     <span class="shop-item-price"><%=albums[i].item_price%></span>
                     <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                  </div>
               </div>
               <% } %>
            </div>
        </section>
        <section class="container content-section">
            <h2 class="section-header">MERCH</h2>
            <div class="shop-items">
               <% for(let i = 0; i < merch.length; i++) { %>
               <div class="shop-item">
                  <span class="shop-item-title"><%=merch[i].item_name %></span>
                  <img class="shop-item-image" src="<%=merch[i].item_image%>">
                  <div class="shop-item-details">
                     <span class="shop-item-price"><%=merch[i].item_price%></span>
                     <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                  </div>
               </div>
               <% } %>
            </div>
        </section>
        <section class="container content-section">
            <h2 class="section-header">CART</h2>
            <div class="cart-row">
                <span class="cart-item cart-header cart-column">ITEM</span>
                <span class="cart-price cart-header cart-column">PRICE</span>
                <span class="cart-quantity cart-header cart-column">QUANTITY</span>
            </div>
            <div class="cart-items">
            </div>
            <div class="cart-total">
                <strong class="cart-total-title">Total</strong>
                <span class="cart-total-price">â‚¬0</span>
            </div>
            <button id="purchase-button" class="btn btn-primary btn-purchase" type="button">PURCHASE</button>
        </section>
        <footer class="main-footer">
            <div class="container main-footer-container">
                <h3 class="band-name">Fink Ployd</h3>
                <ul class="nav footer-nav">
                    <li>
                        <a href="https://www.youtube.com" target="_blank">
                            <img src="assets/YouTube Logo.png">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.spotify.com" target="_blank">
                            <img src="assets/Spotify Logo.png">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com" target="_blank">
                            <img src="assets/Facebook Logo.png">
                        </a>
                    </li>
                </ul>
            </div>
        </footer>
    </body>
</html>
